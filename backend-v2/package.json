"scripts": {
    "build": "tsc && node copy-views.js",
    "start": "node dist/main",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli",
    "migration:generate": "npm run typeorm -- migration:generate -d src/data-source.ts -n",
    "migration:run": "npm run typeorm -- migration:run -d src/data-source.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d src/data-source.ts",
    "migration:show": "npm run typeorm -- migration:show -d src/data-source.ts",
    "db:migrate": "npm run migration:run",
    "db:generate": "npm run migration:generate",
    "deploy:prod": "npm run db:migrate && npm run build && npm run start:prod"
}
