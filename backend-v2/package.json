{
  "name": "chinbino-backend-v2",
  "version": "1.0.0",
  "description": "B2B Backend V2 - Clean Architecture",
  "scripts": {
    "prebuild": "npm run migration:run",
    "build": "nest build",
    "postbuild": "node copy-views.js",
    "start": "node dist/main",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "migration:run": "npx typeorm migration:run --dataSource=src/data-source.ts || echo 'Migration skipped'",
    "migration:generate": "npx typeorm migration:generate --dataSource=src/data-source.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix"
  },
  "dependencies": {
    "@nestjs/common": "^8.4.7",
    "@nestjs/core": "^8.4.7",
    "@nestjs/platform-express": "^8.4.7",
    "@nestjs/typeorm": "^8.1.4",
    "@nestjs/jwt": "^8.0.1",
    "@nestjs/passport": "^8.2.2",
    "@nestjs/config": "^1.2.1",
    "typeorm": "^0.3.12",
    "pg": "^8.8.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "bcrypt": "^5.1.0",
    "class-validator": "^0.13.2",
    "class-transformer": "^0.5.1",
    "hbs": "^4.2.0",
    "ts-node": "^10.9.1",
    "dotenv": "^16.0.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.2.8",
    "@nestjs/schematics": "^8.0.11",
    "@nestjs/testing": "^8.4.7",
    "@types/bcrypt": "^5.0.0",
    "@types/passport-jwt": "^3.0.9",
    "@types/passport-local": "^1.0.35",
    "@types/hbs": "^4.0.1",
    "@types/node": "^16.11.65",
    "@types/jest": "^28.1.8",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^28.1.3",
    "prettier": "^2.7.1",
    "supertest": "^6.3.1",
    "ts-jest": "^28.0.8",
    "ts-loader": "^9.4.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.4"
  }
}
