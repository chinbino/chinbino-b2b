{{! این partial برای لیست فروشندگان است }}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="mb-0">لیست فروشندگان</h3>
    <a href="/admin/sellers/create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> ایجاد فروشنده جدید
    </a>
</div>

{{#if sellers.length}}
<div class="card">
    <div class="card-header">
        <h5 class="mb-0">فروشندگان ثبت‌شده</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th width="60">#</th>
                        <th>نام فروشنده</th>
                        <th>اطلاعات تماس</th>
                        <th>وضعیت</th>
                        <th>تاریخ ثبت</th>
                        <th width="120">عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each sellers}}
                    <tr>
                        <td>{{this.id}}</td>
                        <td>
                            <strong>{{this.name}}</strong>
                            {{#if this.isVerified}}
                            <i class="bi bi-patch-check-fill text-primary" title="تأیید شده"></i>
                            {{/if}}
                        </td>
                        <td>
                            <div><i class="bi bi-envelope"></i> {{this.email}}</div>
                            <div><i class="bi bi-telephone"></i> {{this.phone}}</div>
                        </td>
                        <td>
                            {{#if (eq this.status 'active')}}
                            <span class="status-badge status-active">
                                <i class="bi bi-check-circle"></i> فعال
                            </span>
                            {{else if (eq this.status 'inactive')}}
                            <span class="status-badge status-inactive">
                                <i class="bi bi-x-circle"></i> غیرفعال
                            </span>
                            {{else}}
                            <span class="status-badge status-pending">
                                <i class="bi bi-clock"></i> در انتظار
                            </span>
                            {{/if}}
                        </td>
                        <td>{{this.createdAt}}</td>
                        <td>
                            <div class="btn-group btn-group-sm" role="group">
                                <a href="/admin/sellers/{{this.id}}/edit" 
                                   class="btn btn-outline-primary btn-action"
                                   title="ویرایش">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <button type="button" 
                                        class="btn btn-outline-danger btn-action"
                                        title="حذف">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        
        <!-- Pagination -->
        <nav aria-label="Page navigation" class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1">قبلی</a>
                </li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#">بعدی</a>
                </li>
            </ul>
        </nav>
    </div>
</div>
{{else}}
<div class="card">
    <div class="card-body text-center py-5">
        <i class="bi bi-people display-1 text-muted mb-4"></i>
        <h4 class="mb-3">هنوز فروشنده‌ای ثبت نشده است</h4>
        <p class="text-muted mb-4">برای شروع کار، اولین فروشنده را ایجاد کنید.</p>
        <a href="/admin/sellers/create" class="btn btn-success btn-lg">
            <i class="bi bi-plus-circle"></i> ایجاد اولین فروشنده
        </a>
    </div>
</div>
{{/if}}

<!-- Stats Cards -->
<div class="row mt-4">
    <div class="col-md-3">
        <div class="stats-card bg-primary">
            <i class="bi bi-people-fill"></i>
            <h2>{{totalSellers}}</h2>
            <p>کل فروشندگان</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stats-card bg-success">
            <i class="bi bi-check-circle-fill"></i>
            <h2>{{activeSellers}}</h2>
            <p>فعال</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stats-card bg-warning">
            <i class="bi bi-clock-history"></i>
            <h2>{{recentSellers}}</h2>
            <p>اضافه شده در ماه جاری</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stats-card bg-info">
            <i class="bi bi-patch-check-fill"></i>
            <h2>{{verifiedSellers}}</h2>
            <p>تأیید شده</p>
        </div>
    </div>
</div>
