{{! extends layout }}
{{#extend "layouts/main"}}
    {{#content "body"}}

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="mb-0">لیست فروشندگان</h3>
        <a href="/admin/sellers/create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> ایجاد فروشنده جدید
        </a>
    </div>

    {{#if sellers.length}}
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th width="60">#</th>
                            <th>نام فروشنده</th>
                            <th>ایمیل</th>
                            <th>تلفن</th>
                            <th>وضعیت</th>
                            <th>تاریخ ثبت</th>
                            <th width="150">عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each sellers}}
                        <tr>
                            <td>{{this.id}}</td>
                            <td>
                                <strong>{{this.name}}</strong>
                                {{#if this.isVerified}}
                                <i class="bi bi-patch-check-fill text-primary" title="تأیید شده"></i>
                                {{/if}}
                            </td>
                            <td>{{this.email}}</td>
                            <td>{{this.phone}}</td>
                            <td>
                                {{#if (eq this.status 'active')}}
                                <span class="status-badge status-active">
                                    <i class="bi bi-check-circle"></i> فعال
                                </span>
                                {{else}}
                                <span class="status-badge status-inactive">
                                    <i class="bi bi-x-circle"></i> غیرفعال
                                </span>
                                {{/if}}
                            </td>
                            <td>{{this.createdAt}}</td>
                            <td>
                                <a href="/admin/sellers/{{this.id}}/edit" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-pencil"></i> ویرایش
                                </a>
                                <button class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>

            <nav aria-label="Page navigation" class="mt-3">
                <ul class="pagination justify-content-center">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1">قبلی</a>
                    </li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#">بعدی</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
    {{else}}
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="bi bi-people display-1 text-muted"></i>
            <h4 class="mt-3">هنوز فروشنده‌ای ثبت نشده است</h4>
            <p class="text-muted">برای شروع، اولین فروشنده را ایجاد کنید.</p>
            <a href="/admin/sellers/create" class="btn btn-success btn-lg">
                <i class="bi bi-plus-circle"></i> ایجاد اولین فروشنده
            </a>
        </div>
    </div>
    {{/if}}

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5><i class="bi bi-people-fill"></i> کل فروشندگان</h5>
                    <h2 class="display-4">{{totalSellers}}</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5><i class="bi bi-check-circle-fill"></i> فعال</h5>
                    <h2 class="display-4">{{activeSellers}}</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <h5><i class="bi bi-clock-history"></i> اخیراً اضافه شده</h5>
                    <h2 class="display-4">{{recentSellers}}</h2>
                </div>
            </div>
        </div>
    </div>

    {{/content}}
{{/extend}}
